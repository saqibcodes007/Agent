// .devcontainer/devcontainer.json
{
  "name": "AI Agent Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },

  "postCreateCommand": "sudo playwright install-deps && pip install -r requirements.txt && playwright install chromium",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },

  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Agent API",
      "onAutoForward": "openBrowser"
    }
  }
}
